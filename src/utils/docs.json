{
	"openapi": "3.0.0",
	"info": {
		"title": "Proximity Training Backend",
		"description": "Backend de la plataforma de entrenamiendo de Proximity",
		"contact": {
			"email": "bryan.ve.bv@gmail.com"
		},
		"license": {
			"name": "MIT",
			"url": "https://opensource.org/licenses/MIT"
		},
		"version": "0.0.4"
	},
	"servers": [
		{
			"url": "http://localhost:5000/api",
			"description": "local API"
		}
	],
	"paths": {
		"/auth": {
			"post": {
				"tags": [
					"Autenticaci칩n"
				],
				"summary": "Autenticaci칩n usando email y contrase침a",
				"operationId": "auth",
				"requestBody": {
					"$ref": "#/components/requestBodies/CredentialsDTO"
				},
				"responses": {
					"200": {
						"description": "Usuario autenticado correctamente",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/AuthenticatedUser"
								}
							}
						}
					},
					"401": {
						"description": "Credenciales inv치lidas",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/DefaultError"
								}
							}
						}
					},
					"422": {
						"description": "Credenciales no procesables",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/DefaultError"
								}
							}
						}
					},
					"500": {
						"description": "Error interno del servidor",
						"content": {
							"application/json": {
								"schema": {
									"$ref": "#/components/schemas/DefaultError"
								}
							}
						}
					}
				}
			}
		}
	},
	"components": {
		"schemas": {
			"DefaultError": {
				"type": "object",
				"properties": {
					"error": {
						"type": "boolean",
						"default": true
					},
					"message": {
						"type": "string"
					}
				}
			},
			"AuthenticatedUser": {
				"type": "object",
				"properties": {
					"error": {
						"type": "boolean",
						"default": false
					},
					"message": {
						"$ref": "#/components/schemas/UserDTO"
					}
				}
			},
			"UserDTO": {
				"type": "object",
				"properties": {
					"id": {
						"type": "string"
					},
					"user": {
						"type": "string"
					},
					"email": {
						"type": "string"
					},
					"organization": {
						"type": "string"
					},
					"is_deleted": {
						"type": "number"
					}
				}
			}
		},
		"requestBodies": {
			"CredentialsDTO": {
				"description": "Credenciales del usuario",
				"content": {
					"application/json": {
						"schema": {
							"type": "object",
							"properties": {
								"email": {
									"type": "string",
									"example": "foo@bar.baz"
								},
								"password": {
									"type": "string",
									"example": "pass"
								}
							}
						}
					}
				},
				"required": true
			}
		}
	}
}